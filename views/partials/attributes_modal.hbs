<div
  class='nex-modal fixed z-10 overflow-auto top-20 left-40 w-5/6 h-5/6 border-2 border-nex bg-white m-auto p-4 rounded drop-shadow-2xl'
>
  <div>
    <h2 class='text-2xl text-nex font-bold'>Attributes</h2>
    <button class='absolute right-8 top-8 close-nex-modal'>
      <svg
        xmlns='http://www.w3.org/2000/svg'
        class='h-8 w-8'
        fill='none'
        viewBox='0 0 24 24'
        stroke='currentColor'
        stroke-width='2'
      >
        <path
          stroke-linecap='round'
          stroke-linejoin='round'
          d='M6 18L18 6M6 6l12 12'
        ></path>
      </svg>
    </button>
  </div>

  <section class='my-4 mx-2'>
    {{! Text input }}
    <div class='mx-auto'>
      <input type='hidden' name='type' value='' />

      <h3 class='border p-2 inline-block'>Choose type</h3>
      <span class='mx-4'>Checkboxes </span>
      {{! buttons }}
      <div>
        <div
          class='flex text-base space-x-8 drop-shadow-md overflow-scroll items-center justify-items-center border border-gray-400 p-4 my-4 mx-auto'
        >
          <button
            class='w-32 h-24 m-2 border p-1 hover:bg-gray-200 rounded-md'
          >Text input
          </button>
          <button
            class='w-32 h-24 m-2 border p-1 hover:bg-gray-200 rounded-md'
          >Number
          </button>
          <button
            class='w-32 h-24 m-2 border p-1 hover:bg-gray-200 rounded-md'
          >Date
          </button>
          <button
            class='w-32 h-24 m-2 border p-1 hover:bg-gray-200 rounded-md'
          >Text area
          </button>
          <button
            class='w-32 h-24 m-2 border p-1 hover:bg-gray-200 rounded-md'
          >Term (Yes/No)
          </button>
          <button
            class='w-32 h-24 m-2 border p-1 hover:bg-gray-200 rounded-md'
          >Image
          </button>
          <button
            class='w-32 h-24 m-2 border p-1 hover:bg-gray-200 rounded-md'
          >Check boxes
          </button>
          <button
            class='w-32 h-24 m-2 border p-1 hover:bg-gray-200 rounded-md'
          >Radio buttons
          </button>
          <button
            class='w-32 h-24 m-2 border p-1 hover:bg-gray-200 rounded-md'
          >Email
          </button>
        </div>
      </div>
    </div>

    <div class='flex pt-4 w-100 space-x-4'>
      <div class='w-1/2'>
        <h3 class='text-2xl mb-4 border-b pb-4'>Field options</h3>

        <div class='my-3 mx-2'>
          <input
            type='checkbox'
            checked='checked'
            name='required'
            class='w-8 h-8'
          />
          <label for='required' class='py-4 mx-2 relative -top-2'>Required field</label>
        </div>

        <div class='my-3 flex align-items'>
          <label for='default' class='mx-2 w-1/4 py-2'>Default value</label>
          <input
            type=''
            name='default'
            class='h-12 px-4 border border-gray-400 rounded w-80'
          />
        </div>

        <div class='my-3 flex align-items'>
          <label for='minimum' class='mx-2 w-1/4 py-2'>Minimum value</label>
          <input
            type=''
            name='minimum'
            class='h-12 px-4 border border-gray-400 rounded w-80'
          />
        </div>

        <div class='my-3 flex align-items'>
          <label for='maximum' class='mx-2 w-1/4 py-2'>Maximum value</label>
          <input
            type=''
            name='maximum'
            class='h-12 px-4 border border-gray-400 rounded w-80'
          />
        </div>

        <div class='my-3 flex align-items'>
          <label for='unit' class='mx-2 w-1/4 py-2'>Suffix (units)</label>
          <input
            type=''
            name='unit'
            class='h-12 px-4 border border-gray-400 rounded w-80'
          />
        </div>
      </div>

      <div class='w-1/2 border-l pl-4'>
        <h3 class='text-2xl mb-4 border-b pb-4'>Local labels</h3>

        <div class='my-3 flex align-middle'>
          <label for='en_label' class='mx-2 w-1/4 py-2'>English label</label>
          <input
            type=''
            name='en_label'
            class='h-12 px-4 border border-gray-400 rounded w-80'
          />
        </div>

        <div class='my-3 flex align-items'>
          <label for='ar_label' class='mx-2 w-1/4 py-2'>Arabic label</label>
          <input
            type=''
            name='ar_label'
            class='h-12 px-4 border border-gray-400 rounded w-80'
          />
        </div>

        <div class='my-3 flex align-items'>

          <label for='ar_label' class='mx-2 w-1/4 py-2'>Attribute group(s)
            <span class='text-sm text-gray-500 block my-2'>Shift key for
              multiple select</span>
          </label>
          <select
            multiple
            name='group'
            class='px-4 border border-gray-400 rounded w-80 appearance-none h-30 bg-white p-2'
          >
            <option value='' class='my-1'>Group 1</option>
            <option value='' class='my-1'>Group 2</option>
            <option value='' class='my-1'>Group 3</option>
            <option value='' class='my-1'>Group 4</option>
            <option value='' class='my-1'>Group 5</option>
            <option value='' class='my-1'>Group 6</option>
            <option value='' class='my-1'>Group 7</option>
            <option value='' class='my-1'>Group 8</option>
            <option value='' class='my-1'>Group 9</option>
            <option value='' class='my-1'>Group 10</option>
          </select>

        </div>

        <div class='flex flex-row-reverse mx-28 my-4'>
          <button
            class='bg-nex px-3 py-2 text-white rounded-md w-48 h-12 hover:opacity-80'
          >Save Attribute</button>
        </div>
      </div>

    </div>
  </section>
</div>