<div
  class='hidden nex-modal fixed z-10 overflow-scroll top-20 left-40 w-5/6 h-5/6 border-2 border-nex bg-white m-auto p-4 rounded drop-shadow-2xl'
>
  <div>
    <h2 class='text-2xl text-nex font-bold'>Attributes</h2>
    <button class='absolute right-8 top-8 close-nex-modal'>
      <svg
        xmlns='http://www.w3.org/2000/svg'
        class='h-8 w-8'
        fill='none'
        viewBox='0 0 24 24'
        stroke='currentColor'
        stroke-width='2'
      >
        <path
          stroke-linecap='round'
          stroke-linejoin='round'
          d='M6 18L18 6M6 6l12 12'
        ></path>
      </svg>
    </button>
  </div>

  <section class='my-4 mx-2'>
    {{! Text input }}
    <div class='mx-auto'>
      <input type='hidden' name='type' value='' />

      <button class='border p-2'>Choose type
        {{! <svg
          xmlns='http://www.w3.org/2000/svg'
          class='h-6 w-6 inline-block'
          fill='none'
          viewBox='0 0 24 24'
          stroke='currentColor'
          stroke-width='2'
        >
          <path
            stroke-linecap='round'
            stroke-linejoin='round'
            d='M19 9l-7 7-7-7'
          ></path>
        </svg> }}
      </button>
      <span class='mx-4'>Checkboxes </span>
      {{! buttons }}
      <div>
        <div
          class='flex text-base space-x-8 drop-shadow-md overflow-scroll items-center justify-items-center border p-4 my-4 mx-auto'
        >
          <button
            class='w-32 h-24 m-2 border p-1 hover:bg-gray-200 rounded-md'
          >Text input
          </button>
          <button
            class='w-32 h-24 m-2 border p-1 hover:bg-gray-200 rounded-md'
          >Number
          </button>
          <button
            class='w-32 h-24 m-2 border p-1 hover:bg-gray-200 rounded-md'
          >Date
          </button>
          <button
            class='w-32 h-24 m-2 border p-1 hover:bg-gray-200 rounded-md'
          >Text area
          </button>
          <button
            class='w-32 h-24 m-2 border p-1 hover:bg-gray-200 rounded-md'
          >Term (Yes/No)
          </button>
          <button
            class='w-32 h-24 m-2 border p-1 hover:bg-gray-200 rounded-md'
          >Image
          </button>
          <button
            class='w-32 h-24 m-2 border p-1 hover:bg-gray-200 rounded-md'
          >Check boxes
          </button>
          <button
            class='w-32 h-24 m-2 border p-1 hover:bg-gray-200 rounded-md'
          >Radio buttons
          </button>
          <button
            class='w-32 h-24 m-2 border p-1 hover:bg-gray-200 rounded-md'
          >Email
          </button>
        </div>
      </div>
    </div>

    <div class='flex pt-4 w-100 space-x-4'>
      <div class='w-1/2'>
        <h3 class='text-2xl mb-4 border-b pb-4'>field Options</h3>

        <div class='my-2'>
          <input
            type='checkbox'
            checked='checked'
            name='required'
            class='w-8 h-8'
          />
          <label for='required' class='relative bottom-2 mx-2'>Required field</label>
        </div>

        <div class='my-2'>
          <label for='default' class='mx-2'>Default value</label>
          <input type='' name='default' class='w-32 h-12 px-4 border' />
        </div>

        <div class='my-2'>
          <label for='minimum' class='mx-2'>Minimum value</label>
          <input type='' name='minimum' class='w-32 h-12 px-4 border' />
        </div>

        <div class='my-2'>
          <label for='maximum' class='mx-2'>Maximum value</label>
          <input type='' name='maximum' class='w-32 h-12 px-4 border' />
        </div>
      </div>

      <div class='w-1/2 border-l pl-4'>
        <h3 class='text-2xl mb-4 border-b pb-4'>Local labels</h3>

        <div class='my-2'>
          <label for='en_label' class='mx-2'>English label</label>
          <input type='' name='en_label' class='w-40 h-12 px-4 border' />
        </div>
        <div class='my-2'>
          <label for='ar_label' class='mx-2'>Arabic label</label>
          <input type='' name='ar_label' class='w-40 h-12 px-4 border' />
        </div>
      </div>

    </div>
  </section>
</div>